<view class="container">
  <view class="login-card">
    <view class="logo">
      <text class="logo-text">智能记账</text>
      <text class="logo-subtitle">AI驱动的财务管理助手</text>
    </view>

    <view class="form">
      <view class="form-item">
        <text class="label">用户名</text>
        <input 
          class="input" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>

      <view class="form-item">
        <text class="label">密码</text>
        <input 
          class="input" 
          placeholder="请输入密码" 
          password
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>

      <button 
        class="btn-login" 
        bindtap="onLogin" 
        loading="{{loading}}"
        disabled="{{loading}}"
      >
        {{loading ? '登录中...' : '登录'}}
      </button>

      <button 
        class="btn-wechat" 
        open-type="getUserInfo" 
        bindgetuserinfo="onWechatLogin"
        loading="{{wechatLoading}}"
        disabled="{{wechatLoading}}"
      >
        {{wechatLoading ? '登录中...' : '微信快速登录'}}
      </button>

      <view class="register-link">
        <text>还没有账号？</text>
        <text class="link" bindtap="goToRegister">立即注册</text>
      </view>
    </view>
  </view>
</view>
