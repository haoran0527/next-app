.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.filter-section {
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  margin: 20rpx;
  overflow: hidden;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-reset {
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.reset-text {
  font-size: 24rpx;
  color: #666;
}

.filter-content {
  padding: 0 32rpx;
}

.filter-row {
  padding: 24rpx 0;
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-icon {
  font-size: 36rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.filter-value {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.filter-value.active {
  color: #1890ff;
  font-weight: 500;
}

.filter-arrow {
  font-size: 36rpx;
  color: #ccc;
  font-weight: 300;
  transform: rotate(0deg);
  transition: transform 0.3s;
}

.filter-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin-left: 52rpx;
}

.transaction-list {
  padding: 0 20rpx;
}

.empty {
  padding: 120rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.transaction-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.transaction-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.transaction-info {
  flex: 1;
  padding-right: 20rpx;
}

.transaction-category {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.transaction-description {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.transaction-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.transaction-amount {
  font-size: 40rpx;
  font-weight: bold;
}

.transaction-amount.income {
  color: #52c41a;
}

.transaction-amount.expense {
  color: #ff4d4f;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.time-icon {
  font-size: 24rpx;
}

.loading,
.no-more {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
