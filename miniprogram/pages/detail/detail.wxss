.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.amount-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.amount-card.income {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.amount-card.expense {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.amount-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.amount-value {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
}

.detail-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #999;
}

.detail-value {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

.action-buttons {
  padding: 0 20rpx;
}

.btn-delete {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}
