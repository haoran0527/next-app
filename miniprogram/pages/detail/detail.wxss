.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.amount-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.amount-card.income {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.amount-card.expense {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.amount-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.amount-value {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
}

.amount-edit {
  display: flex;
  align-items: center;
  justify-content: center;
}

.amount-prefix {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 8rpx;
}

.amount-input {
  width: 300rpx;
  font-size: 64rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  background: transparent;
}

.detail-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.detail-value {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

.detail-value.empty {
  color: #ccc;
}

.detail-value.picker-value {
  color: #1890ff;
}

.detail-input {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

.action-buttons {
  padding: 0 20rpx 20rpx 20rpx;
  display: flex;
  gap: 20rpx;
  position: relative;
  z-index: 10;
}

.btn-edit,
.btn-save,
.btn-cancel,
.btn-delete {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0;
}

.btn-edit {
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

.btn-save {
  color: #52c41a;
  border: 2rpx solid #52c41a;
}

.btn-cancel {
  color: #999;
  border: 2rpx solid #999;
}

.btn-delete {
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}
