.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 总计卡片 */
.summary-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.summary-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.summary-label {
  font-size: 26rpx;
  color: #666;
}

.summary-amount {
  font-size: 36rpx;
  font-weight: bold;
}

.summary-amount.income-amount {
  color: #52c41a;
}

.summary-amount.expense-amount {
  color: #ff4d4f;
}

.summary-amount.positive {
  color: #52c41a;
}

.summary-amount.negative {
  color: #ff4d4f;
}

.summary-card.balance-positive {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border: 1rpx solid #bae7ff;
}

.summary-card.balance-negative {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
  border: 1rpx solid #ffa39e;
}

/* 时间选择器 */
.period-selector {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.period-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.period-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 区块 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #fff;
}

.income-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.expense-icon {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.income-title {
  color: #52c41a;
}

.expense-title {
  color: #ff4d4f;
}

/* 空状态 */
.empty {
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 96rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

.income-dot {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.expense-dot {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.category-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.category-amount {
  font-size: 36rpx;
  font-weight: bold;
}

.income-amount {
  color: #52c41a;
}

.expense-amount {
  color: #ff4d4f;
}

/* 进度条 */
.category-bar-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-bar {
  flex: 1;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.income-bar {
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
}

.expense-bar {
  background: linear-gradient(90deg, #ff4d4f 0%, #ff7875 100%);
}

.bar-percentage {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
  text-align: right;
}

.category-footer {
  margin-top: 8rpx;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}
