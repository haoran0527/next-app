.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.period-selector {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
}

.period-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  font-size: 40rpx;
  color: #999;
}

.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-card.income {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.stat-card.expense {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.stat-card.balance {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.stat-value.negative {
  color: #ffccc7;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.empty {
  padding: 80rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.category-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.category-bar {
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.category-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}

.category-percentage {
  font-size: 24rpx;
  color: #666;
}

.summary-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
