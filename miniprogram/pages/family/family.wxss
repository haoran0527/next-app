/* pages/family/family.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 100rpx;
}

/* Header */
.header {
  padding: 40rpx 30rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* No Family State */
.no-family {
  background: #fff;
  border-radius: 24rpx;
  margin: 30rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-icon {
  font-size: 32rpx;
}

/* Has Family State */
.has-family {
  position: relative;
  padding: 0 30rpx;
}

/* Family Info */
.family-info {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 40rpx 40rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.info-header {
  margin-bottom: 40rpx;
}

.family-name-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  padding-right: 60rpx;
  box-sizing: border-box;
}

.family-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  flex-shrink: 0;
}

.member-count-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 20rpx;
  border-radius: 12rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.btn-more {
  position: fixed;
  top: 40rpx;
  right: 30rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  font-size: 36rpx;
  color: #fff;
  z-index: 999;
  letter-spacing: 8rpx;
  cursor: pointer;
}

.invite-section {
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.invite-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.invite-code-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.invite-code {
  font-size: 48rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  letter-spacing: 4rpx;
  color: #667eea;
}

.btn-copy {
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #667eea;
  border: none;
}

.invite-desc {
  font-size: 22rpx;
  color: #999;
}

/* Stats Section */
.stats-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  flex: 1;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
}

.stat-card.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.stat-card.highlight .stat-title,
.stat-card.highlight .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

.stat-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.stat-item.total {
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  margin-top: 15rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
}

.stat-value.income {
  color: #52c41a;
}

.stat-card.highlight .stat-value.income {
  color: #95de64;
}

.stat-value.expense {
  color: #ff4d4f;
}

.stat-card.highlight .stat-value.expense {
  color: #ffadd2;
}

.stat-value.positive {
  color: #52c41a;
}

.stat-value.negative {
  color: #ff4d4f;
}

/* Member Stats */
.member-stats {
  margin-top: 30rpx;
}

.member-stats-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-stats-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.member-stat-item {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.member-stat-item:last-child {
  border-bottom: none;
}

.member-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-shrink: 0;
  width: 200rpx;
}

.member-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.member-detail-info {
  flex: 1;
  min-width: 0;
}

.member-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.member-stat-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.crown {
  font-size: 20rpx;
  flex-shrink: 0;
}

.member-transactions {
  font-size: 22rpx;
  color: #999;
}

.trans-count {
  color: #667eea;
}

.member-amounts {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.amount-row.total {
  padding-top: 8rpx;
  border-top: 1rpx dashed #eee;
  margin-top: 5rpx;
}

.amount-label {
  color: #999;
  font-size: 22rpx;
}

.amount-value {
  font-size: 26rpx;
  font-weight: 600;
}

.amount-value.income {
  color: #52c41a;
}

.amount-value.expense {
  color: #ff4d4f;
}

.amount-value.positive {
  color: #52c41a;
}

.amount-value.negative {
  color: #ff4d4f;
}

/* Members Section */
.members-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.member-list {
  margin-top: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.member-detail {
  flex: 1;
}

.member-name-line {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.me-tag {
  padding: 4rpx 12rpx;
  background: #667eea;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.member-role {
  font-size: 24rpx;
  color: #999;
}

.join-date {
  margin-left: 10rpx;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 40rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  border: none;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
  border-right: 1rpx solid #eee;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-confirm[disabled] {
  opacity: 0.5;
}

/* Action Sheet */
.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.action-sheet.show {
  opacity: 1;
  pointer-events: auto;
}

.action-sheet-content {
  transform: translateY(100%);
  transition: transform 0.3s;
}

.action-sheet.show .action-sheet-content {
  transform: translateY(0);
}

.action-btn {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border: none;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.action-btn.danger {
  color: #ff4d4f;
}

.action-btn.cancel {
  color: #666;
  margin-top: 10rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.action-icon {
  font-size: 32rpx;
}

/* Back Nav */
.back-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
}

.back-icon {
  font-size: 36rpx;
}

.back-text {
  font-weight: 500;
}
